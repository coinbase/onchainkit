{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist/esm",
      "rootDir": "./src",
      "declaration": true,
      "declarationMap": true,
      "declarationDir": "./dist/types"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.test-d.ts"]
  }